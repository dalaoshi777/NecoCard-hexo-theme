.archive-box {
    display: flex;
    justify-content: center;
    flex-direction: column;
    align-items: center
}
.list-group > p {
    font-size: 16px;
    font-weight: bold;
    margin: 10px 0px;
}
.list-group {
    padding: 10px;
}
.archive {
    box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
    border-radius: $theme-border-radius;
    margin: 10px;
    width: 75%;
    display: flex;
    flex-direction: column;
}
.list-group-item {
    display: flex;
    padding: 10px;
    text-decoration: none;
    color: black;
}
.list-group-item:hover {
    background-color: #F5F7FA;
    border-radius: $theme-border-radius;
}
.list-group-item time {
    flex: 0 0 5rem;
}

@media screen and (max-width: 450px) {
   .archive {
       width :90%;     
    } 
    .tag-cloud-box {
        width :90%;
    }
}