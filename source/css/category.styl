.category-box {
    width: 75%;
    display: flex;
    box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
    border-radius: 6px;
    margin: 10px;
    flex-direction: column;
}
.category {
    padding: 10px;
}
.category-header > span {
    font-size: 16px;
    font-weight: bold;
    margin-left: 5px;
}
.category-header {
    display: flex;
    align-items: center;
    margin: 0px 0px 10px;
}
.category-item {
    display: flex;
    flex-wrap: wrap;
    margin: 0px 10px;
}
.category-item-link {
    text-decoration: none;
    font-size: 12px;
    margin-right: 10px;
    padding: 1px 10px
    transition: .2s;
    border-radius: 3px;
    display: block;
    line-height: 1.5;
    color: #6788de;
    background-color: #edf3ff;
    -webkit-tap-highlight-color: rgba(255, 255, 255, 0);
}
.category-item-link:hover {
    color: #335eea;
} 
@media screen and (max-width: 450px) {
    .category-box {
        width :90%;
    }
}   