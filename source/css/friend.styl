.friend-box {
    display: flex;
    justify-content: center;
}
.friends {
    min-width: 80%;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
}
.friends-item img {
    width: 150px;
    box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
    border-radius: 18px;
    transition: 1s;
    transform-style: preserve-3d;
    
}
.friends-item img:hover {
    transform: rotateY(180deg);
    transform-style: preserve-3d;
    transition: 1s;
}
.friends-item {
    display: flex
    flex-direction: column;
    margin: 10px;
}
.friends-item a {
    text-align: center;
    font-size: 18px;
    font-weight: bold;
    margin-top: 10px;
    color: black;
    text-decoration: none;
    -webkit-tap-highlight-color: rgba(255, 255, 255, 0);
}

