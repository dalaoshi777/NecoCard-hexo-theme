/*页面头部样式*/

.header-box {
    display: flex;
    flex-direction: column;
    align-items: center;

}
.name {
    font-weight:bold;
}
.avatar {
    margin-top: 1em;
    width: 150px;
    border-radius: 18px;
    box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
    transition: 1s;
    margin-bottom: 10px;
    transform-style: preserve-3d;
}
.avatar:hover {
    transform: rotateY(180deg);
    transform-style: preserve-3d;
    transition: 1s;
}
#menu {
    display: flex;
    list-style: none;
}
#menu > li {
    margin: 10px 0px;
}
#menu > li a {
    text-decoration: none;
    font-weight:700;
    color: black;
    font-size: 18px;
    margin-left: 12px;
    padding: 6px 12px;
    transition: .2s;
    border-radius: 6px;
    -webkit-tap-highlight-color: rgba(255, 255, 255, 0);
}

#menu > li a:hover {
    color: #335eea;
    transition: .2s;
}
#menu li.hl a {
    color: #335eea;
}
#menu > li :hover {
    background-color:  #F5F7FA;
}