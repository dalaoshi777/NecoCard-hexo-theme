/*文章页面样式*/
.post {
    display: flex;
    justify-content: center;

}
.post-box {
    box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
    border-radius: 12px;
    padding: 10px;
    margin: 10px;
    width: 800px;
    background-color: white;
}
.page-title {
    display: flex;
    justify-content: center;
    font-size:40px;
    font-weight:bold;
    color: #a7535a;
}
.post-img-box {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%
}
.post-img {
    max-width: 50%;
    object-fit: cover;
    border-radius: 8px;
    border 1px #ed5a65 solid;
    
}


//文章样式
.post-content >*  {
    margin: 1em 0;
}
.post-content a {
    color: #4d1018;
    font-weight: bold;
}
.page-excerpt a {
    color: #4d1018;
    font-weight: bold;
}
.page-excerpt p {
    margin-top: 10px
}























code {
    padding: 0 8px;
    color: #c7254e;
    background: #f9f2f4;
    border-radius: 2px;
    line-height: 20px;
    display: inline-block;
}
.post-content img {
    width: 80%
    border-radius: 8px;
    box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
}
table {
    max-width: 65em; /*表格最大宽度，避免表格过宽*/
    border: 1px solid #dedede; /*表格外边框设置*/
    margin-bottom: 10px ; /*外边距*/
    border-collapse: collapse; /*使用单一线条的边框*/
    empty-cells: show; /*单元格无内容依旧绘制边框*/
}

table th,
table td {
  height: 35px; /*统一每一行的默认高度*/
  border: 1px solid #dedede; /*内部边框样式*/
  padding: 0 10px; /*内边距*/
}

table th {
    font-weight: bold; /*加粗*/
    text-align: center !important; /*内容居中，加上 !important 避免被 Markdown 样式覆盖*/
    background: rgba(158,188,226,0.2); /*背景色*/
}


table tbody tr:nth-child(2n) {
    background: rgba(158,188,226,0.12); 
}
table th {
    white-space: nowrap; /*表头内容强制在一行显示*/
}