
.tag-cloud-box {
    box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
    border-radius: $theme-border-radius;
    margin: 10px;
    width: 75%;
    display: flex;
    flex-direction: column;
}

.tag-cloud-header  {
    display: flex;
    align-items: center;
}
.tag-cloud-header span {
    font-size: 16px;
    font-weight: bold;
    margin-left: 5px

}
.tag-cloud-item {
    display: flex;
    flex-wrap: wrap;
}
.tag-cloud {
    padding: 10px;
}
.tag-cloud-item-link {
    text-decoration: none;
    min-width: 40px;
    font-weight: bold;
    text-align: center
    color: black;
    font-size: 8px;
    padding: 8px;
    margin: 5px 10px
    transition: .2s;
    border-radius: 6px;
    display: block;
    background-color: #F5F7FA;
    -webkit-tap-highlight-color: rgba(255, 255, 255, 0);
}
.tag-cloud-item-link:hover {
    color: #335eea;   
}
@media screen and (max-width: 450px) {
    .tag-cloud-box {
        width :90%;
    }
}