
.tag-cloud-box {
    box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
    border-radius: $theme-border-radius;
    margin: 10px;
    width: 75%;
    display: flex;
    flex-direction: column;
}

.tag-cloud-header  {
    display: flex;
    align-items: center;
    margin: 0px 0px 10px 0px;
}
.tag-cloud-header span {
    font-size: 16px;
    font-weight: bold;
    margin-left: 5px

}
.tag-cloud-item {
    display: flex;
    flex-wrap: wrap;
    margin: 0px 10px;
}
.tag-cloud {
    padding: 10px;
}
.tag-cloud-item-link {
    text-decoration: none;
    font-size: 12px;
    margin-right: 10px;
    padding: 1px 10px
    transition: .2s;
    border-radius: 3px;
    display: block;
    line-height: 1.5;
    color: #6788de;
    background-color: #edf3ff;
    -webkit-tap-highlight-color: rgba(255, 255, 255, 0);
}
.tag-cloud-item-link:hover {
    color: #335eea;   
}
@media screen and (max-width: 450px) {
    .tag-cloud-box {
        width :90%;
    }
}